import signal
from pathlib import Path

PKGDATA_DIR = Path(__file__).parent.parent / './build/output/install/share/gx52'
localedir = Path(__file__).parent.parent / './build/output/install/share/locale'

signal.signal(signal.SIGINT, signal.SIG_DFL)

# gettext.install('trg', localedir)

if __name__ == '__main__':
    import gi

    gi.require_version('Gtk', '3.0')
    gi.require_version('Dazzle', '1.0')
    gi.require_version('Gdk', '3.0')
    gi.require_version('Notify', '0.7')

    from gi.repository import Gio

    resource = Gio.Resource.load(str(PKGDATA_DIR / 'com.leinardi.gx52.gresource'))
    resource._register()

    from gx52 import __main__

    __main__.main()
