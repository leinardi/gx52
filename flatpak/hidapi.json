{
  "name": "hidapi",
  "buildsystem": "simple",
  "build-commands": [
    "./bootstrap",
    "./configure --prefix=/app",
    "make",
    "make install"
  ],
  "cleanup": [
    "/lib/*.la",
    "/lib/pkgconfig",
    "/include"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "https://github.com/libusb/hidapi/archive/hidapi-0.9.0.tar.gz",
      "sha256": "630ee1834bdd5c5761ab079fd04f463a89585df8fcae51a7bfe4229b1e02a652"
    }
  ],
  "post-install": [
    "mkdir -p /app/share/licenses/hidapi/",
    "install -Dm644 LICENSE.txt LICENSE-bsd.txt LICENSE-orig.txt /app/share/licenses/hidapi/"
  ]
}
